{
  "user": "ryubright",
  "project": "transformerLSTM",
  "entity": "dkt-dinosaur",

  "cat_cols": [
    "assessmentItemID",
    "test_id",
    "question_number",
    "KnowledgeTag",
    "test_day",
    "test_month"
  ],
  "num_cols": [
    "elapsed_time",
    "ans_cumavg",
    "ans_cumsum",
    "time_question_median",
    "tag_acc",
    "elapsed_time_mean",
    "elapsed_time_median",
    "KnowledgeTag_et_std",
    "KnowledgeTag_et_mean",
    "test_acc",
    "test_hour",
    "hour_acc",
    "exp_tag",
    "KnowledgeTag_aC_mean"
  ],

  "preprocess": {
    "data_dir": "./data",
    "data_ver": "v2.2",
    "fe_elapsed_time": [600, "mean"],
    "use_k_fold": true,
    "num_fold": 5
  },

  "dataset": {
    "type": "BaseDataset",
    "max_seq_len": 128
  },

  "data_loader": {
    "type": "사용할 DataLoader",
    "args": {
      "batch_size": 64,
      "num_workers": 4,
      "collate_fn": "collate_fn"
    }
  },

  "arch": {
    "type": "TransformerLSTM",
    "args": {
      "dim_model": 128,
      "dim_ffn": 128,
      "embedding_dim": 64,
      "num_heads": 2,
      "n_layers_transformer": 1,
      "n_layers_LSTM": 1,
      "dropout_rate": 0.3
    }
  },

  "loss": "bce",

  "optimizer": {
    "type": "adamW",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },

  "trainer": {
    "type": "사용할 Trainer",
    "epochs": 100,
    "metric": ["aucroc", "accuracy"],
    "seed": 417,
    "save_dir": "./save_model",
    "submission_dir": "./submission"
  }
}